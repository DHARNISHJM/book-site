<%- layout("layouts/boilerplate") %>
    <h1>
        <div class="card text-light p-4 rounded-4">
            <h4>
                <%= result.title %>
            </h4>
            <div class="row">
                <div class="col-3">
                    <img style="width: 18rem" class="rounded-4 pt-3"
                        src="https://image.tmdb.org/t/p/w500/<%= result.poster_path%>" alt="">
                </div>
                <div class="col-9 pt-4">
                    <p style="font-size: 1rem"> <span class="fw-bold">Overview</span>: <%= result.overview %>
                    </p>
                    <p style="font-size: 1rem"> <span class="fw-bold">Release Date</span>: <%= result.release_date %>
                    </p>
                </div>
            </div>
        </div>

    </h1>